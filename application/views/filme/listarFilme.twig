{% extends "base.twig" %}

{% block title %}Login{% endblock %}

{% block header %}{% include "base/header.twig" %}{% endblock %}

{% block body_class %}{% endblock %}

{% block master_class %}jumbotron{% endblock %}

{% block left_class %}col-md-2{% endblock %}

{% block mid_class %}col-md-8{% endblock %}

{% block right_class %}col-md-2{% endblock %}

{% block footer_class %}col-md-2{% endblock %}


{% block content %}
    <div class="row">
        <div class="container-fluid">
            <table class="table table-dark">
                <tr>
                    <td>
                        Nome:
                    </td>
                    <td>
                        Descrição:
                    </td>
					<td>
						Foto Capa:
					</td>
                    <td>
                        Favoritos:
                    </td>
                </tr>
                {% for filmes in results %}
                    <tr>
                        <td>
                          {{ filmes.nome|raw }}
                        </td>
                        <td>
                            {{ filmes.descricao|raw }}
                        </td>
						<td>
							<img src="{{ filmes.caminho|raw }}" class="img-fluid" style="max-width: 10em;height: auto;"/>
						</td>
                        <td>
							{% set fav = 0 %}
							{% for favorito in favoritos %}
								{% if favorito.id_filme == filmes.id_filme %}
									{% set fav = 1 %}
									<a class="btn btn-warning" href="{{ base_url() }}Filme/removerFavoritos/{{ filmes.id_filme|raw }}">Remover</a>
                        		{% endif %}
							{% endfor %}
							{% if fav == 0 %}
								<a class="btn btn-success" href="{{ base_url() }}Filme/adicionarFavoritos/{{ filmes.id_filme|raw }}">Adcionar</a>
							{% endif %}
						</td>
                    </tr>
                {% endfor %}
            </table>
            <div class="pagination">
                {{ links|raw }}
            </div>
        </div>
    </div>

{% endblock %}

{% block right_content %}


{% endblock %}
