                            <label>
                                Telefone: (99) 99999-9999
                            </label>
                            <label>
                                E-mail: christophertheilacher@gmail.com
                            </label>
                        </div>
                    </div>

                </div>
            {% endblock %}
        </footer>

        {% block scripts %}
            <script src = "{{ base_url()|raw }}vendor/components/jquery/jquery.js"></script>
            <script src="{{ base_url()|raw }}vendor/twbs/bootstrap/dist/js/bootstrap.js"></script>
        {% endblock %}

    </body>
</html>