{% extends "base.twig" %}

{% block title %}Login{% endblock %}

{% block header %}{% include "base/header.twig" %}{% endblock %}

{% block body_class %}{% endblock %}

{% block master_class %}jumbotron{% endblock %}

{% block mid_class %}col-md-9{% endblock %}

{% block right_class %}col-md-3{% endblock %}


{% block content %}
			<div class="row content">
				<div class="col-md-12">
					<h3>Principais filmes</h3>
				</div>
				<div class="col-md-1">
				</div>
				<div class="col-md-8">
					<div class="row">
						<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
							<div class="carousel-inner">
							{% set primeiro = 0 %}
							{% for filme in filmes %}
								{% if primeiro == 0 %}
									<div class="carousel-item active">
										<img class="d-block w-100" src="{{ filme.caminho|raw }}" style="max-width: 50em" alt="Primeiro Slide">
									</div>
								{% else %}
									{% set primeiro = 1 %}
									<div class="carousel-item">
										<img class="d-block w-100" src="{{ filme.caminho|raw }}" style="max-width: 50em" alt="Primeiro Slide">
									</div>
								{% endif %}
							{% endfor %}
							</div>
							<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Anterior</span>
							</a>
							<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Pr√≥ximo</span>
							</a>
						</div>
					</div>
				</div>

			</div>

{% endblock %}

{% block right_content %}
	<div class="row">
		<div class="container-fluid">
			{{ form_open|raw }}
			<div class="form-group">
				{{ label_email|raw }}
				{{ input_email|raw }}
			</div>
			<div class="form-group">
				{{ label_senha|raw }}
				{{ input_senha|raw }}
			</div>
			{{ button_submit|raw }}
			{{ form_close|raw }}

			<a href="{{ base_url()|raw }}resenha-online/cadastro-usuario">Cadastrar-se</a>
		</div>
	</div>

{% endblock %}
